@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix regen: <http://regen.network/> .

regen:CreditBatchShape a sh:NodeShape ;
  sh:targetClass regen:CreditBatch ;
  sh:property [
    sh:path regen:vcsRetirementSerialNumber ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path regen:vintageYear ;
    sh:datatype xsd:gYear ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:batchMonitoringReport ;
    sh:node regen:NameUrlShape ;
  ] ;
  sh:property [
    sh:path regen:batchVerificationReport ;
    sh:node regen:NameUrlShape ;
  ] ;
.
