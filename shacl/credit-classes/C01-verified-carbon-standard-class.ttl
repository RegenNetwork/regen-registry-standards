@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix regen: <http://regen.network/> .

regen:CreditClassShape a sh:NodeShape ;
  sh:targetClass regen:CreditClass ;
	sh:property [
    sh:path schema:description ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
	] ;
	sh:property [
		sh:path regen:sourceRegistry ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
    sh:node regen:OrganizationShape ;
	] ;
	sh:property [
		sh:path regen:sectoralScope ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
    sh:node regen:ItemListShape ;
	] ;
	sh:property [
		sh:path regen:offsetGenerationMethod ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
    sh:node regen:ItemListShape ;
	] ;
	sh:property [
    sh:path regen:verificationMethod ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:minLength 1 ;
		sh:datatype xsd:string ;
	] ;
.

regen:ItemListShape a sh:NodeShape ;
	sh:property [
    sh:path schema:itemListElement ;
    sh:datatype schema:ItemList ;
	] ;
.
