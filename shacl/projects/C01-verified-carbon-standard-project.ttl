@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix regen: <http://regen.network/> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix geojson: <https://purl.org/geojson/vocab#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dash: <http://datashapes.org/dash#> .

regen:ProjectShape a sh:NodeShape ;
  sh:targetClass regen:Project ;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path regen:vcsProjectId ;
    sh:datatype xsd:unsignedInt ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:vcsProjectPage ;
    sh:datatype schema:URL ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:projectDeveloper ;
    sh:node regen:OrganizationDisplay ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:vcsProjectType ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path regen:projectActivity ;
    sh:node regen:NameUrlShape ;
  ] ;
  sh:property [
    sh:path regen:vcsMethodology ;
    sh:node regen:NameUrlShape ;
  ] ;
  sh:property [
    sh:path regen:projectSize ;
    sh:node regen:SizeShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:projectStartDate ;
    sh:datatype xsd:date ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:projectEndDate ;
    sh:datatype xsd:date ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path regen:offsetGenerationMethod ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path regen:landStory ;
    sh:name "Story of the land" ;
    sh:description "Describe the story of this property." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:maxLength 500 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path regen:additionalCertification ;
    sh:node regen:NameOptionalUrlShape ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:class geojson:Feature ;
    sh:path schema:location ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:property [
      sh:path geojson:id ;
      sh:datatype xsd:string ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ] ;
    sh:property [
      sh:path geojson:bbox ;
      sh:node dash:ListShape ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:property [
        sh:path ( [ sh:zeroOrMorePath rdf:rest ] rdf:first ) ;
        sh:datatype xsd:double ;
        sh:minCount 4 ;
        sh:maxCount 4 ;
      ] ;
    ] ;
    sh:property [
      sh:path geojson:geometry ;
      sh:class geojson:Point ;  
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:property [
        sh:path geojson:coordinates ;
        sh:node dash:ListShape ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:property [
          sh:path ( [ sh:zeroOrMorePath rdf:rest ] rdf:first ) ;
          sh:datatype xsd:double ;
          sh:minCount 2 ;
          sh:maxCount 2 ;
        ] ;
      ] ;
    ] ;
  ] ;
.

regen:NameUrlShape a sh:NodeShape ;
  sh:targetClass regen:NameUrl;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype schema:URL ;
  ] ;
.

regen:NameOptionalUrlShape a sh:NodeShape ;
  sh:targetClass regen:NameOptionalUrl;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:minLength 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:maxCount 1 ;
    sh:datatype schema:URL ;
  ] ;
.

regen:SizeShape a sh:NodeShape ;
  sh:targetClass regen:Size ;
  sh:property [
    sh:path qudt:unit ;
    sh:datatype qudt:Unit ;
  ] ;
  sh:property [
    sh:path qudt:numericValue ;
    sh:minExclusive 0 ;
    sh:datatype xsd:double ;
  ] ;
.
